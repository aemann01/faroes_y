HaplogroupFrequencies <- read.table("Haplogroup_frequencies.csv", header=TRUE, row.names=1, sep=";")

library(reshape2)
library(ggplot2)
library(scales)

HaplogroupFrequencies <- melt(cbind(HaplogroupFrequencies, ind = rownames(HaplogroupFrequencies)), is.vars = c('Haplogroup'))

ggplot(HaplogroupFrequencies,aes(x=variable, y=value, fill=ind))+geom_bar(position="fill")+scale_y_continuous(labels=percent_format())+scale_fill_grey("")+xlab("")+opts(title= "Haplogroup Frequency")+opts(axis.title.y=theme_blank())

